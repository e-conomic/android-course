<?xml version="1.0" encoding="utf-8"?>

<!-- Root View. Linearly horizontally oriented. -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Hello world text view -->
        <TextView android:id="@+id/hello_world"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:textSize="40sp"
            android:text="@string/hello_world"/>

        <!-- Country picture -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:src="@mipmap/country_flag"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Text field to edit message -->
        <EditText android:id="@+id/edit_message"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/edit_message"/>

        <!-- Button to send written message -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_send"
            android:onClick="sendMessage"/>

    </LinearLayout>

    <!-- Button to show and hide messages -->
    <Button android:id="@+id/button_showhide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To be changed"
        android:onClick="showHide"/>

</LinearLayout>